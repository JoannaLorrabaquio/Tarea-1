	public class MetodoEquals {

		public static void main (String [] args){

		string cadena 1;
		string cadena 2;

		cadena 1 = "carro";
		cadena 2 = "carro";

		if (cadena1.equals("carro")); {
			System.out.println("Iguales");
		}else{
			System.out.println("Diferentes");
	}



