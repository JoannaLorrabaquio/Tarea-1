	public class MetodoIndexOfYLastIndexOf {

		public static void main (String [] args){
			
		Scanner sc = new Scanner (System.in);
		String email = "joanna@gmail.com";
		boolean r = email.startsWith("joa");
		if(r==true) {
		System.out.println("Si comienza");
		}else {
		System.out.println("No comienza");
	}


importjava.util.scanner;

	public class MetodoToUpperCase {

		public static void main (String [] args){

		Scanner sc = new Scanner (System.in);
		System.out.print("Ingrese su nombre");
		String nombre = sc.nextLine();
		String nombreNuevo = nombre.toUpperCase();
		
		System.out.println(nombre);
		System.out.println(nombreNuevo);
	}



importjava.util.scanner;

	public class MetodoToLowerCase {

		public static void main (String [] args){
		

		Scanner sc = new Scanner (System.in);
		System.out.print("Ingrese su nombre");
		String nombre = sc.nextLine();
		nombre = nombre.toLowerCase();
		
		System.out.println("Ingrese otro nombre");
		String nombre2 = sc.nextLine();		
		nombre2 = nombre2.toLowerCase();

		if(nombre.equals(nombre2)) {
		System.out.println("Son iguales");
		}else {
		System.out.println("No son iguales");

	}



importjava.util.scanner;

	public class MetodoSubString {

		public static void main (String [] args){

		Scanner sc = new Scanner(System.in);
		System.out.print("Ingrese email");
		String email = sc.nextLine();

		String nuevoEmail = email.substring (3);
		System.out.println(nuevoEmail);
		nuevoEmail = email.substring(20, 50);
		System.out.println(nuevoEmail);

	}



importjava.util.scanner;

	public class MetodoParseInt {

		public static void main (String [] args){

		String numero = "-2";

		try {
			int tempNum = Integer.parseInt(numero);
			System.out.println(tempNum);
		} catch (Excepcion e) {
			System.out.println("Numero no encontrado");
	}
}




importjava.util.scanner;

	public class MetodoStringBuilder {

		public static void main (String [] args){

		StringBuilder lenguaje = new StringBuilder();
		lenguaje.append("Programación ");	
		lenguaje.append("Orientada ");
		lenguaje.append("a Objetos");
		
		System.out.println(lenguaje);

		System.out.println(new StringBuilder().append("Programación ").append("Orientada ").append("a Objetos");
	
	}
 }
