importjava.util.scanner;

	public class MetodoLength {

		public static void main (String [] args){
			
			String apellido = "Hernandez";
			int longitud = apellido.length();
			System.out.println(longitud);			
			System.out.println(apellido);
			String nombre = "Gerardo";
			int longitudN = nombre.length();
			System.out.println(longitudN);
	}



importjava.util.scanner;

	public class MetodoIsEmpty {

		public static void main (String [] args){

			Lista<Integer> listaNum = new ArrayList<Integer>();
			listaNum.add(5);
			listaNum.add(10);
			listaNum.add(15);
			listaNum.clear();
			boolean r=listaNum.isEmpty();

			if(r==true) {
				System.out.println("La lista esta vacia");
			}else {
				System.out.println("La lista no esta vacia");
			}

			booleean r2=listaNum.contains(10);
			if(r2==true) {
				System.out.println("Si contiene el elemento");
			}else {
				System.out.println("No contiene el elemento");
			}

			System.out.println( listaNum.size());
			for (Integer x : listaNum) {
				System.out.println(x);
			}


